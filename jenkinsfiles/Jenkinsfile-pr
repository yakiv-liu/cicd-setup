pipeline {
    agent {
        label 'centos-slave'
    }
    
    triggers {
        githubPullRequest(
            org: 'your-organization',
            repo: 'your-repository',
            branch: 'main',
            triggerPhrase: '.*test.*',
            onlyTriggerPhrase: false,
            githubApiUrl: 'https://api.github.com',
            successComment: 'PRéªŒè¯é€šè¿‡ï¼Œå¯ä»¥åˆå¹¶',
            failureComment: 'PRéªŒè¯å¤±è´¥ï¼Œè¯·æ£€æŸ¥æ„å»ºæ—¥å¿—',
            skipFirstBuild: false,
            cancelBuildsOnUpdate: true
        )
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
    }
    
    environment {
        NEXUS_URL = 'http://192.168.233.8:8081'
        SONAR_URL = 'http://192.168.233.8:9000'
        TRIVY_URL = 'http://192.168.233.9:8084'
    }
    
    stages {
        stage('Checkout PR') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'refs/pull/${CHANGE_ID}/head']],
                    extensions: [
                        [$class: 'CleanCheckout'],
                        [$class: 'RelativeTargetDirectory', relativeTargetDir: 'src']
                    ],
                    userRemoteConfigs: [[
                        refspec: '+refs/pull/*:refs/remotes/origin/pr/*',
                        url: 'https://github.com/your-organization/your-repository.git',
                        credentialsId: 'github-token'
                    ]]
                ])
                
                dir('src') {
                    sh 'git log -1 --oneline'
                }
            }
        }
        
        stage('Parallel Security & Build') {
            parallel {
                stage('Security Scan') {
                    steps {
                        dir('src') {
                            script {
                                // SonarQube PRåˆ†æ
                                withSonarQubeEnv('sonarqube') {
                                    sh """
                                        mvn sonar:sonar \
                                        -Dsonar.projectKey=myapp-pr-${CHANGE_ID} \
                                        -Dsonar.projectName='My App PR ${CHANGE_ID}' \
                                        -Dsonar.pullrequest.key=${CHANGE_ID} \
                                        -Dsonar.pullrequest.branch=${CHANGE_BRANCH} \
                                        -Dsonar.pullrequest.base=${CHANGE_TARGET} \
                                        -Dsonar.sources=src/main/java \
                                        -Dsonar.tests=src/test/java \
                                        -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml
                                    """
                                }
                                
                                // OWASPä¾èµ–æ£€æŸ¥
                                sh 'mvn org.owasp:dependency-check-maven:check -DskipTests'
                                
                                // SpotBugsé™æ€åˆ†æ
                                sh 'mvn spotbugs:spotbugs -DskipTests'
                                
                                // Trivyæ¼æ´æ‰«æ
                                sh '''
                                    trivy filesystem --format sarif --output trivy-report.sarif .
                                '''
                            }
                        }
                    }
                    post {
                        success {
                            script {
                                // æ›´æ–°GitHubçŠ¶æ€
                                updateGitHubCommitStatus(
                                    state: 'SUCCESS',
                                    context: 'security-scan',
                                    description: 'å®‰å…¨æ‰«æé€šè¿‡',
                                    targetUrl: "${env.BUILD_URL}"
                                )
                            }
                        }
                        failure {
                            script {
                                updateGitHubCommitStatus(
                                    state: 'FAILURE', 
                                    context: 'security-scan',
                                    description: 'å®‰å…¨æ‰«æå¤±è´¥',
                                    targetUrl: "${env.BUILD_URL}"
                                )
                            }
                        }
                    }
                }
                
                stage('Build & Test') {
                    steps {
                        dir('src') {
                            script {
                                // ç¼–è¯‘å’Œæµ‹è¯•
                                sh '''
                                    mvn clean compile test -T 1C \
                                    -Dmaven.test.failure.ignore=false
                                '''
                                
                                // ç”Ÿæˆæµ‹è¯•æŠ¥å‘Š
                                sh 'mvn surefire-report:report jacoco:report'
                                
                                // æ‰“åŒ…ï¼ˆä½†ä¸éƒ¨ç½²ï¼‰
                                sh 'mvn package -DskipTests'
                            }
                        }
                    }
                    post {
                        success {
                            script {
                                updateGitHubCommitStatus(
                                    state: 'SUCCESS',
                                    context: 'build',
                                    description: 'æ„å»ºæµ‹è¯•é€šè¿‡',
                                    targetUrl: "${env.BUILD_URL}"
                                )
                                
                                // å½’æ¡£æµ‹è¯•æŠ¥å‘Š
                                junit 'src/target/surefire-reports/*.xml'
                                publishHTML([
                                    allowMissing: false,
                                    alwaysLinkToLastBuild: true,
                                    keepAll: true,
                                    reportDir: 'src/target/site',
                                    reportFiles: 'surefire-report.html,jacoco/index.html',
                                    reportName: 'æµ‹è¯•æŠ¥å‘Š'
                                ])
                            }
                        }
                        failure {
                            script {
                                updateGitHubCommitStatus(
                                    state: 'FAILURE',
                                    context: 'build', 
                                    description: 'æ„å»ºæµ‹è¯•å¤±è´¥',
                                    targetUrl: "${env.BUILD_URL}"
                                )
                            }
                        }
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                dir('src') {
                    script {
                        // ç­‰å¾…SonarQubeè´¨é‡é—¨ç»“æœ
                        timeout(time: 10, unit: 'MINUTES') {
                            def qg = waitForQualityGate()
                            if (qg.status != 'OK') {
                                error "è´¨é‡é—¨æœªé€šè¿‡: ${qg.status}"
                            }
                        }
                    }
                }
            }
            post {
                success {
                    script {
                        updateGitHubCommitStatus(
                            state: 'SUCCESS',
                            context: 'quality-gate',
                            description: 'è´¨é‡é—¨æ£€æŸ¥é€šè¿‡',
                            targetUrl: "${env.BUILD_URL}"
                        )
                    }
                }
                failure {
                    script {
                        updateGitHubCommitStatus(
                            state: 'FAILURE',
                            context: 'quality-gate',
                            description: 'è´¨é‡é—¨æ£€æŸ¥å¤±è´¥', 
                            targetUrl: "${env.BUILD_URL}"
                        )
                    }
                }
            }
        }
    }
    
    post {
        always {
            // å‘é€PRéªŒè¯ç»“æœåˆ°GitHubè¯„è®º
            script {
                if (currentBuild.result == 'SUCCESS') {
                    githubPRComment comment: "âœ… PRéªŒè¯é€šè¿‡ï¼æ‰€æœ‰æ£€æŸ¥å‡æˆåŠŸå®Œæˆã€‚\n\n- âœ… å®‰å…¨æ‰«æé€šè¿‡\n- âœ… æ„å»ºæµ‹è¯•é€šè¿‡\n- âœ… è´¨é‡é—¨æ£€æŸ¥é€šè¿‡\n\næ„å»ºè¯¦æƒ…: ${env.BUILD_URL}"
                } else if (currentBuild.result == 'FAILURE') {
                    githubPRComment comment: "âŒ PRéªŒè¯å¤±è´¥ï¼è¯·æ£€æŸ¥ä»¥ä¸‹é—®é¢˜ï¼š\n\n- ğŸ” æŸ¥çœ‹æ„å»ºæ—¥å¿—: ${env.BUILD_URL}\n- ğŸ“Š æŸ¥çœ‹æµ‹è¯•æŠ¥å‘Š: ${env.BUILD_URL}testReport/\n- ğŸ›¡ï¸ æŸ¥çœ‹å®‰å…¨æ‰«æç»“æœ: http://192.168.233.8:9000/dashboard?id=myapp-pr-${CHANGE_ID}"
                }
            }
            
            // æ¸…ç†å·¥ä½œç©ºé—´
            cleanWs()
        }
    }
}
